<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background = "@drawable/sss"
        android:orientation="vertical"

        tools:context=".SettingActivity">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/ha"
            android:padding="10dp"
            android:text="SETTINGS"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold|italic"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Chapter Page Background"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:background= "@color/label"
            android:layout_marginTop="20dp"
            android:textStyle="bold|italic"
            >
        </TextView>

        <RadioGroup
            android:id="@+id/RGroup1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <RadioButton
                android:id="@+id/shady"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="shady"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/nature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="nature"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/mild"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="mild "
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />
        </RadioGroup>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Home Page Background"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:background= "@color/label"
            android:layout_marginTop="10dp"
            android:textStyle="bold|italic"
            >
        </TextView>

        <RadioGroup
            android:id="@+id/RGroup2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <RadioButton
                android:id="@+id/dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="dark"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="light"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/mix"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="mix"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />
        </RadioGroup>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="quiz Background"
            android:background= "@color/label"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:textStyle="bold|italic"
            >
        </TextView>

        <RadioGroup
            android:id="@+id/RGroup3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="blue"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/grey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="grey"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

        </RadioGroup>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Set welcome message.: "
                android:background= "@color/label"
                android:textColor="@color/white"
                android:textSize="19sp"
                android:textStyle="bold|italic"
                />

            <EditText
                android:id="@+id/msg"
                android:inputType="text"
                android:background="@color/black"
                android:textColor="@color/grey"
                android:layout_width="214dp"
                android:layout_height="wrap_content"
                />

        </LinearLayout>
        <Button
            android:id="@+id/reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset"
            android:layout_marginTop="10dp"


            />
        <Button
            android:id="@+id/save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Save Setting"
            android:layout_marginTop="40dp"



            />

    </LinearLayout>
</ScrollView>